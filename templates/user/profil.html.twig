{% extends'base.html.twig' %}
{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div id="registerForm" class="col-lg-7 col-md-10 col-mb-10">
                <div class="jumbotron"><span class="align-middle"></span>
                    <h1>Votre profil</h1>
                    <hr class="my-4">
                    <table class="table table-hover">
                        <tbody>
                        <tr class="table-light">
                            <th scope="row">Nom: </th>
                            <td>{{ user.name }}</td>
                        </tr>
                        <tr class="table-light">
                            <th scope="row">Pr√©nom: </th>
                            <td>{{ user.surname }}</td>
                        </tr>
                        <tr class="table-light">
                            <th scope="row">Pseudo: </th>
                            <td>{{ user.username }}</td>
                        </tr>
                        <tr class="table-light">
                            <th scope="row">email: </th>
                            <td>{{ user.email }}</td>
                        </tr>
                        </tr>
                        <tr class="table-light">
                            <th scope="row">telephone: </th>
                            <td>{{ user.telephone }}</td>
                        </tr>
                        <tr class="table-light">
                            <th scope="row">campus: </th>
                            <td>{{ user.campus.name }}</td>
                        </tr>

                        </tbody>
                    </table>
                    <hr class="my-4">
                    {% if app.user.username == user.username %}
                        <a type="button" class="btn btn-info" href="{{ path('user_edit',{'id': app.user.id})}}">Modifier votre profil</a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block title %}mon profil{% endblock %}